{
  "expo": {
    "name": "Queue Radar",
    "slug": "queue-radar",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./android/app/src/main/res/drawable-xxxhdpi/splashscreen_logo.png",
    "splash": {
      "image": "./android/app/src/main/res/drawable-xxxhdpi/splashscreen_logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.queueradar",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app needs access to your location to show nearby salons and barber shops.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app needs access to your location to show nearby salons and barber shops."
      }
    },
    "android": {
      "package": "com.anonymous.queueradar",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./android/app/src/main/res/drawable-xxxhdpi/splashscreen_logo.png",
        "backgroundColor": "#FFFFFF"
      },
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "YOUR_GOOGLE_MAPS_API_KEY"
        }
      }
    },
    "web": {
      "favicon": "./android/app/src/main/res/mipmap-xxxhdpi/ic_launcher.webp"
    },
    "extra": {
      "eas": {
        "projectId": "e2d8d70e-fa44-47fd-a704-cfcadb590f67"
      }
    }
  }
}
